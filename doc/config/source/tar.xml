<?xml version="1.0" encoding="UTF-8"?>
<source type="tar">
  <!-- mandatory -->
  <option name="path" value="src" />

  <!-- optional, default null -->
  <option name="exclude" value="foo/bar,fiz/baz" />

  <!-- optional, default false -->
  <option name="forceLocal" value="false" />

  <!-- optional, default false -->
  <option name="ignoreFailedRead" value="false" />

  <!-- optional, default null -->
  <option name="incrementalFile" value="path/to/metadata.snar" />

  <!-- optional, default null -->
  <option name="forceLevelZeroOn" value="%D@Sun" />

  <!-- optional, default null -->
  <option name="compressProgram" value="lbzip2" />

  <!-- optional, default false -->
  <option name="removeSourceDir" value="false" />

  <!-- optional, default null -->
  <option name="throttle" value="5m" />

  <!-- define your custom tar executable location -->
  <option name="pathToTar" value="/path/to/custom/bin" />

  <!-- optional, default false -->
  <option name="dereference" value="false" />
</source>
