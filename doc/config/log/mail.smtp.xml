<?xml version="1.0" encoding="UTF-8"?>
<log type="mail">
  <!-- mandatory -->
  <option name="recipients" value="forename.lastname@example.com" />

  <!-- optional default=false -->
  <option name="sendOnlyOnError" value="true" />

  <!-- optional default=PHPBU Backup Report from $HOSTNAME -->
  <option name="subject" value="My Backup Report Subject" />

  <!-- optional default=phpbu@hostname -->
  <option name="sender.mail" value="no-replay@example.com" />

  <!-- mandatory -->
  <option name="transport" value="smtp" />

  <!-- optional default=587 -->
  <option name="smtp.port" value="587" />

  <!-- mandatory -->
  <option name="smtp.host" value="smtp.example.com" />

  <!-- optional, default=none -->
  <option name="smtp.username" value="user.name@example.com" />

  <!-- optional, default=none -->
  <option name="smtp.password" value="mySecret" />

  <!-- optional, default=none -->
  <option name="smtp.encryption" value="ssl" />
</log>
